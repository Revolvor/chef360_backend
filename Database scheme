CREATE TABLE 'USER'
(
    USERID INT PRIMARY KEY ,
    USERNAME VARCHAR(100) NOT NULL ,
    USER_PASSWORD VARCHAR(10) NOT NULL ,
    FULL_NAME VARCHAR(50) NOT NULL ,
    LAST_NAME VARCHAR(50) NOT NULL ,
    E_MAIL VARCHAR(50) NOT NULL ,
    PHONE_NUMBER INT ,
    REGISTRATION_TIME SMALLDATETIME ,
    LAST_LOGIN_TIME SMALLDATETIME ,
    USER_STATUS VARCHAR(10) CHECK(USER_STATUS IN ('ONLINE','OFFLINE','LOGOUT')) NOT NULL,
    USER_TYPE VARCHAR(50) CHECK(USER_TYPE IN ('ADMINISTRATOR','REGULAR_USER','VIP_USER')) NOT NULL,
    COUNTRY VARCHAR(100) ,
    CITY VARCHAR(100) ,
);

CREATE TABLE 'RECPIE_RECOMMENDATION'
(
    USERID INT ,
    USERNAME VARCHAR(100) NOT NULL ,
    GENERATION_TIME SMALLDATETIME ,
    MEAL_TYPE VARCHAR(50) CHECK(MEAL_TYPE IN ('BREAKFAST','LUNCH','DINNER')) ,
    MEAL_TIME INT ,
    INGREDIENTS VARCHAR(300) NOT NULL ,
    PRIMARY KEY(USERID,GENERATION_TIME)
);

create table USER_PREFERENCE(
   USERID INT NOT NULL PRIMARY KEY,
   COOKWARE VARCHAR(255) NOT NULL,
   ALLERGICS VARCHAR(255) NOT NULL,
   FOREIGN KEY (USERID) REFERENCES USER_PROFILE(USERID)
);
